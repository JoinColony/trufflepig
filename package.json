{
  "name": "trufflepig",
  "version": "1.0.0",
  "description": "Truffle contract artifact loading tool for local development",
  "main": "lib/index.js",
  "bin": "bin/trufflepig.js",
  "files": [
    "bin",
    "lib",
    "Readme.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "rm -rf lib && yarn run build:lib && yarn run build:flow",
    "build:flow": "flow-copy-source src lib --ignore '__tests__/*.js'",
    "build:lib": "babel src --out-dir lib",
    "flow": "flow check",
    "lint": "run(){ eslint --ignore-pattern=**/{node_modules,lib}/* --fix ${@:-\"./src/{,**/}*.js\"}; }; run",
    "precommit": "lint-staged",
    "test": "yarn run lint && yarn run flow"
  },
  "keywords": [
    "truffle",
    "ethereum",
    "smart-contracts",
    "development-tool"
  ],
  "author": "James Lefr√®re (james@colony.io)",
  "license": "ISC",
  "lint-staged": {
    "src/{,**/}*.js": [
      "lint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "chalk": "^2.3.0",
    "chokidar": "^2.0.0",
    "cors": "^2.8.4",
    "express": "^4.16.2",
    "flow-copy-source": "^1.2.1",
    "yargs": "^11.0.0"
  },
  "devDependencies": {
    "@colony/eslint-config-colony": "^4.0.1",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-flow": "^6.23.0",
    "eslint": "^4.17.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-flowtype": "^2.44.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-prettier": "^2.6.0",
    "flow-bin": "^0.66.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.0.0",
    "prettier": "^1.10.2"
  },
  "peerDependencies": {}
}
