{
  "name": "trufflepig",
  "version": "1.0.0",
  "description": "Truffle contract artifact loading tool for local development",
  "main": "lib/index.js",
  "scripts": {
    "build": "yarn run build:lib && yarn run build:flow",
    "build:flow": "flow-copy-source src lib --ignore '__tests__/*.js'",
    "build:lib": "babel src --out-dir lib --ignore __tests__",
    "flow": "flow src",
    "lint": "run(){ eslint --ignore-pattern=**/{node_modules,lib}/* --fix ${@:-\"./src/{,**/}*.js\"}; }; run",
    "precommit": "lint-staged",
    "test": "yarn run lint"
  },
  "keywords": [
    "truffle",
    "ethereum",
    "smart-contracts",
    "development-tool"
  ],
  "author": "James Lefr√®re (james@colony.io)",
  "license": "ISC",
  "lint-staged": {
    "src/{,**/}*.js": [
      "lint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "chokidar": "^2.0.0",
    "express": "^4.16.2",
    "flow-copy-source": "^1.2.1"
  },
  "devDependencies": {
    "@colony/eslint-config-colony": "^1.0.3",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.2",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-flow": "^6.23.0",
    "eslint": "^4.11.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-flowtype": "^2.41.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-prettier": "^2.4.0",
    "flow-bin": "^0.59.0",
    "husky": "^0.14.3",
    "lint-staged": "^6.0.0",
    "prettier": "^1.10.2"
  }
}
